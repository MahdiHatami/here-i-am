<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_nav_graph.xml"
    app:startDestination="@id/phoneNumberFragment">

    <!-- Phone -->
    <fragment
        android:id="@+id/phoneNumberFragment"
        android:name="com.tuga.konum.view.ui.signup.PhoneNumberFragment"
        android:label="fragment_phone_number"
        tools:layout="@layout/fragment_phone_number">
        <action
            android:id="@+id/action_phoneNumberFragment_to_passwordFragment"
            app:destination="@id/passwordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@layout/fragment_phone_number"
            app:popUpToInclusive="true" />
    </fragment>
    <!-- Password   -->
    <fragment
        android:id="@+id/passwordFragment"
        android:name="com.tuga.konum.view.ui.signup.PasswordFragment"
        android:label="fragment_password"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"
        tools:layout="@layout/fragment_password">
        <action
            android:id="@+id/action_passwordFragment_to_emailFragment"
            app:destination="@id/emailFragment" />
        <argument
            android:name="phoneNumber"
            app:argType="string" />
    </fragment>

    <!-- Email   -->
    <fragment
        android:id="@+id/emailFragment"
        android:name="com.tuga.konum.view.ui.signup.EmailFragment"
        android:label="fragment_email"
        tools:layout="@layout/fragment_email">

        <action
            android:id="@+id/action_emailFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <!-- Profile -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.tuga.konum.view.ui.signup.ProfileFragment"
        android:label="fragment_profile"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"
        tools:layout="@layout/fragment_profile" />
</navigation>
