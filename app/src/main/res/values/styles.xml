<resources>

  <style name="Widget.Konum.NavigationView" parent="Widget.MaterialComponents.NavigationView">
    <!--Remove any scrim insets applied by NavigationView for system bars-->
    <item name="insetForeground">@android:color/transparent</item>
    <!--Set the background color of NavigationView-->
    <item name="android:background">@android:color/transparent</item>
    <item name="elevation">0dp</item>
    <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    <item name="itemTextColor">@color/color_on_surface_emphasis_medium</item>
    <item name="itemIconTint">@color/color_on_surface_emphasis_medium</item>
  </style>

  <style name="Widget.Konum.Chip.Entry" parent="Widget.MaterialComponents.Chip.Entry">
    <item name="closeIconSize">0dp</item>
    <item name="closeIconEnabled">false</item>
    <item name="chipIcon">@drawable/avatar_none</item>
    <item name="chipIconSize">@dimen/chip_icon_diameter</item>
    <item name="chipStartPadding">0dp</item>
    <item name="android:checkable">false</item>
  </style>


  <style name="EditTextVerification">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/konum_black_800</item>
    <item name="android:maxLength">1</item>
    <item name="android:maxLines">1</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/border_verification</item>
    <item name="android:inputType">numberSigned</item>
  </style>

  <style name="EditTextNetworkCode">
    <item name="android:layout_width">25dp</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/konum_black_800</item>
    <item name="android:maxLength">1</item>
    <item name="android:maxLines">1</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/join_circle_code_input_background</item>
    <item name="android:inputType">text|textCapCharacters</item>
    <item name="android:layout_marginEnd">8dp</item>
  </style>

  <style name="CircularOutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="textAllCaps">false</item>
    <item name="cornerRadius">20dp</item>
    <item name="strokeColor">@color/konum_blue_800</item>
  </style>

  <style name="signupExtendedButton">
    <item name="android:layout_margin">8dp</item>
  </style>
</resources>
